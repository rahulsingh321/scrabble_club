<%= form_with(model: @player) do |f| %>
  <div class="row g-3">
    <div class="col-sm-6">
      <%= f.label :first_name, class: 'form-label' %>
      <%= f.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
    </div>
    <div class="col-sm-6">
      <%= f.label :last_name, class: 'form-label' %>
      <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
    </div>
    <div class="col-12">
      <%= f.label :nickname, class: 'form-label' %>
      <%= f.text_field :nickname, class: 'form-control', placeholder: 'Nickname' %>
    </div>
    <div class="col-12">
      <%= f.label :email, class: 'form-label' %>
      <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
    </div>
    <div class="col-12">
      <%= f.label :phone, class: 'form-label' %>
      <%= f.text_field :phone, class: 'form-control', placeholder: 'Phone' %>
    </div>
  </div>

  <%= f.submit 'Submit', class: 'mt-2 btn btn-primary' %>
<% end %>
