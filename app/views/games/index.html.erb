<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Games</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to 'New', new_game_path, class: 'btn btn-sm btn-outline-secondary' %>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @games.each_with_index do |game, index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= game.title %></td>
          <td><%= game.description %></td>
          <td>
            <%= link_to 'Edit', edit_game_path(game), class: 'btn btn-sm btn-primary' %><br>
            <%= link_to 'Destroy', game_path(game), method: :destroy, class: 'btn btn-sm btn-danger' %>
            <%= link_to 'Create Match', new_game_match_path(game), class: 'btn btn-sm btn-success' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
